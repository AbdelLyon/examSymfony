{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="app">
		{{ include('includes/navbar.html.twig') }}
		<div class="bg-white shadow p-5 w-75 m-auto mt-5">
			<h4 class="fs-5 mb-3">Inscription</h4>
			{{ form_start(registrationForm) }}

			<div class="form-group">
				{{ form_errors(registrationForm.username) }}
				{{ form_widget(registrationForm.username, {'attr': {'placeholder': "Nom d'utilisateur", 'class': 'form-control'}}) }}
				{{ form_help(registrationForm.username) }}
			</div>

			<div class="form-group my-3">
				{{ form_errors(registrationForm.plainPassword) }}
				{{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe', 'class': 'form-control'}}) }}
				{{ form_help(registrationForm.plainPassword) }}
			</div>

			<div class="d-flex justify-content-between align-items-center">
				<div class="form-group">
					{{ form_errors(registrationForm.agreeTerms) }}
					{{ form_widget(registrationForm.agreeTerms, {'attr': { 'class': 'form-check-input me-1'}}) }}
					{{ form_label(registrationForm.agreeTerms, 'Accepter les conditions') }}
					{{ form_help(registrationForm.agreeTerms) }}
				</div>

				<button type="submit" class="btn btn-sm btn-outline-primary">
					S'inscrire
				</button>
			</div>

			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
